try:
 with open("proyecto.txt", "r+") as f:
    f.write("Hola")
    f.seek(0)
    leer = f.read()
    if "Hola" in leer:
        print("Hola esta en el archivo")
    else:
        print("Hola no esta en el archivo")
except:
 FileNotFoundError: print("Parece que el archivo no esta en el directorio") # type: ignore
