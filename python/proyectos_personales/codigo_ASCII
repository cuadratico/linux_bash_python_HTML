opciones = int(input("que quieres hacer: cifrar una letra(1), descifrar un numero(2)\n"))

if opciones == 1:
    letra = input("que letra quires cifrar\n")
    asd = ord(letra)
    print(f"{letra} corresponde a {asd}")
elif opciones == 2:
    numero = int(input("que numero quieres descifrar\n"))
    ads = chr(numero)
    print(ads)
